<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageFailed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias=".35"
        app:layout_constraintDimensionRatio="1:1"
        app:srcCompat="@drawable/ic_list_empty"/>

    <com.google.android.material.textview.MaterialTextView
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/imageFailed"
        app:layout_constraintEnd_toEndOf="@id/imageFailed"
        android:layout_marginTop="8dp"
        android:text="@string/desc_failed"
        android:textColor="@color/red_500"
        app:layout_constraintTop_toBottomOf="@id/imageFailed"
        android:id="@+id/descFailed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        app:layout_constraintStart_toStartOf="@id/imageFailed"
        app:layout_constraintEnd_toEndOf="@id/imageFailed"
        android:layout_marginTop="8dp"
        android:id="@+id/reloadBtn"
        app:layout_constraintTop_toBottomOf="@id/descFailed"
        android:text="@string/reload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>